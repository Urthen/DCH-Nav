html(lang="en")
	include head
	body
		include header
			include navigation
		.contentRepeat
			.content
				h2  Welcome to Dell Childrens' Hospital

				div#floorSelect
					span Select a floor:
					ul
						each info, num in floors
							li(data-floor=num).floorbtn= info.description
				.clear
				each info, num in floors
					p
						img(id="Floor" + num,src="/images/"+info.image).hidden.floorplan

			script(type="text/javascript", src="/js/lib/jquery.fancybox.js")
			script(type="text/javascript", src="/js/addNodes.js")

			link(rel="stylesheet", href="/css/jquery.fancybox.css")
			include footer