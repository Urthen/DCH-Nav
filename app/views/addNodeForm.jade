html(lang="en")
	include head
	body
		h2 Add Point of Interest
		form(id='form')
			input(type='hidden', name='posx', value=x)
			input(type='hidden', name='posy', value=y)
			input(type='hidden', name='floor', value=floor)

			label(for='id') ID:
			input(id='id', name='id', value=id, disabled='true')

			label(for='name') Name:
			input(id='name', name='name', value=name)
			label(for='type') Type:
			select(id='type', name='type')
				option(value='endpoint') Endpoint
				option(value='junction') Junction
			button(id='save') Save
			button(id='cancel') Cancel

			if id
				button(id='delete') Delete

		script(type='text/javascript', src='/js/addNodeForm.js')